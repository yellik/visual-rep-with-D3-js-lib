{
    "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": false,
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*.ts"],  //requires a src folder and also a .ts file in repo
    "exclude": ["node_modules"]
  }